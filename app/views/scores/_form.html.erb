<%= form_for @score, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :game_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :game_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :participant_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :participant_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :points, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :points, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :direction, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direction, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scores_path, :class => 'btn' %>
  </div>
<% end %>
