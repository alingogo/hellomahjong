<%- model_class = Meeting -%>
<div class="page-header">
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= 'タイトル' %></th>
      <th><%= '作成者' %></th>
      <th><%= '説明' %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @meeting.title %></td>
      <td><%= @meeting.creator %></td>
      <td><%= @meeting.description %></td>
    </tr>
  </tbody>
</table>

<div class="form-actions">
  <p>チームマスター</p>
  <%= form_for :meeting, :url => {:action => 'login'} do |f| %>
    <%= f.hidden_field :meeting_id, value: @meeting.id %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "go" %>
  <% end %>
  <p>閲覧者</p>
  <%= form_for :meeting, :url => {:action => 'login'} do |f| %>
    <%= f.hidden_field :meeting_id, value: @meeting.id %>
    <%= f.submit "watch" %>
  <% end %>
